<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <!-- http://commons.wikimedia.org/wiki/Coffee_and_tea_icons -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="6dip" >

        <Button
            style="@style/HomeButton"
            android:layout_weight=".5"
            android:drawableTop="@drawable/dashboard_teapot_icon"
            android:gravity="center"
            android:onClick="onBrewRoundClick"
            android:text="@string/dashboard_brew_round" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:padding="6dip" >

        <Button
            android:id="@+id/action_one_button"
            style="@style/HomeButton"
            android:layout_weight=".5"
            android:drawableTop="@drawable/dashboard_brew_groups"
            android:gravity="center"
            android:onClick="onBrewGroupsClick"
            android:text="@string/dashboard_groups" >
        </Button>

        <Button
            style="@style/HomeButton"
            android:layout_weight=".5"
            android:drawablePadding="5dip"
            android:drawableTop="@drawable/dashboard_stats_icon"
            android:gravity="center"
            android:onClick="onBrewStatsClick"
            android:text="@string/dashboard_stats" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_holder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/add_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>